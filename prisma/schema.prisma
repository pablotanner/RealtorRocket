  SINGLE_FAMILY_HOME
  MULTI_FAMILY_HOME
  CONDO
  APARTMENT
  TOWNHOUSE
  LUXURY
  OFFICE
  RETAIL
  INDUSTRIAL
  LAND
  FARM
}

// Define the ListingStatus enum to track the status of a real estate listing.
enum ListingStatus {
  ACTIVE
  INACTIVE
  RENTED
  NOT_RENTED
  RESERVED
  SOLD
  PENDING
  UNKNOWN
}

